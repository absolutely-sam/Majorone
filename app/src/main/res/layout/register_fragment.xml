<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:focusableInTouchMode="true"
    android:padding="16sp">

    <RelativeLayout
        android:id="@+id/reg_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/reg_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_text"
            android:layout_below="@+id/reg_logo"
            android:layout_marginTop="-50sp"
            android:background="@drawable/card_background"
            android:padding="16sp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/full_name"
                style="@style/TextInputLayerTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reg_user"
                >

                <EditText
                    android:id="@+id/full_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:inputType="text"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reg_user"
                style="@style/TextInputLayerTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reg_pass">

                <EditText
                    android:id="@+id/reg_user_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reg_pass"
                style="@style/TextInputLayerTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reg_sign_up">

                <EditText
                    android:id="@+id/reg_pass_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    />
            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/reg_view_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reg_sign_up"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/reg_user"
                android:button="@drawable/checkbox_btn"
                />

            <Button
                android:id="@+id/reg_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_bg"
                android:text="Sign Up"
                android:textColor="@color/colorTextIcons"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16sp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="20sp"
            />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>